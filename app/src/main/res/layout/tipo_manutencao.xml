<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="293dp" android:visibility="visible" android:clickable="false">

        <Button
                android:text="Salvar"
                android:layout_width="98dp"
                android:layout_height="36dp"
                android:id="@+id/btsalvar2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@+id/custo"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_marginTop="48dp"
                android:inputType="numberDecimal"
                android:id="@+id/kmTroca"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:hint="Km proxima troca "
                app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:inputType="datetime"
                android:ems="10"
                android:id="@+id/dataTroca" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/kmTroca" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"
                android:hint="Data da Troca" android:maxLength="10"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/custo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/dataTroca"
                app:layout_constraintHorizontal_bias="0.0" android:hint="Custo" android:textSize="18sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="26dp"
                android:id="@+id/tipoManutencao"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp" android:textSize="20sp" app:layout_constraintHorizontal_bias="0.494"
                android:textAlignment="center"/>


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>