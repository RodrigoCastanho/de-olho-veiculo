<?xml version="1.0" encoding="utf-8"?>

<ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_tela_cadastro"
            tools:context=".telaCadastro" tools:layout_editor_absoluteY="81dp" tools:visibility="visible">


        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Nome do Veiculo"
                android:ems="18"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="76dp"
                android:id="@+id/nomeveiculo"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>


        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Marca do Veiculo"
                android:ems="18"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nomeveiculo" android:id="@+id/marcaveiculo"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Placa do Veiculo"
                android:ems="18"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/placaveiculo" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/marcaveiculo"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Motor"
                android:ems="18"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/motorveiculo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/placaveiculo"/>

        <Spinner
                android:id="@+id/combescolha"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:entries="@array/combustivel"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/motorveiculo" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.060000002"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/combustivel" android:layout_marginStart="8dp"/>

        <TextView
                android:text="Combustível:"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/combustivel" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/motorveiculo" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.06"
                app:layout_constraintEnd_toStartOf="@+id/combescolha" android:layout_marginEnd="8dp"
                android:textSize="18sp"/>
        <TextView
                android:text="Tipo de Câmbio:"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:id="@+id/cambio" android:textSize="18dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/combustivel"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cambioescolha" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.033"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/cambioescolha"
                android:entries="@array/cambio" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/combescolha" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/cambio"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/fabricaoveiculo"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fabricaoveiculo"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="72dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cambio"
                android:textSize="18dp" android:hint="Ano de Fabricação" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.07999998"/>
        <Button
                android:text="Cadastrar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:id="@+id/btCadastro" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fabricaoveiculo" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.292"
                app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:background="#918B8B"
                android:textColor="#FFFFFF"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>