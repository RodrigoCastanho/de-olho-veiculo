<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.devnattiva.deolhoveiculo.TelaSobreApp">


    <TextView
            android:id="@+id/txt_sobre_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sobreApp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txt_versao_sobre_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vers_o_1_0"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_sobre_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp" />

    <TextView
            android:id="@+id/txt_desenvolvido_sobre_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/desenvolvido"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_versao_sobre_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>